{
  "compilerOptions": {
    "outDir": "./dist/",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "module": "NodeNext",
    "target": "es2015",
    "allowJs": true,
    "moduleResolution": "nodenext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "jsx": "react",
    "sourceMap": true,
    "strict": false,
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
  "include": ["src/**/*", "types/index.d.ts"]
}
